%h2 Sign In
%i Login using desk.clerk@yourhotel.com, password : password
= form_for("user", :url =>  user_session_path) do |f|
  %p
    = f.label :email
    %br
    = text_field_tag 'user[email]'
  %p
    = f.label :password
    = password_field_tag 'user[password]'
  %p
    = f.check_box :remember_me
    = f.label :remember_me
  = f.submit "Sign in"
